/* overlay at start */
.mfp-fade.mfp-bg {
  opacity: 0;
  transition: all 0.3s ease-out;
}
/* overlay animate in */
.mfp-fade.mfp-bg.mfp-ready {
  opacity: 0.8;
}
/* overlay animate out */
.mfp-fade.mfp-bg.mfp-removing {
  opacity: 0;
}

/* content at start */
.mfp-fade.mfp-wrap .mfp-content {
  opacity: 0;
  transform: scale(0.95)
  transition: all 0.3s ease-out;
}
/* content animate it */
.mfp-fade.mfp-wrap.mfp-ready .mfp-content {
  opacity: 0;
  transform: scale(1)
}

.mfp-fade.mfp-wrap.mfp-ready.mfp-image-loaded .mfp-content {
  opacity: 1;
  transform: scale(1)
}

/* content animate out */
.mfp-fade.mfp-wrap.mfp-removing.mfp-image-loaded .mfp-content {
  opacity: 0;
  transform: scale(0.95)
}    


