.scroll-to-top
    position: fixed; 
    background: url('/img/scroll-to-top.png') no-repeat;
    cursor: pointer; 
    width: 55px; 
    height: 55px; 
    bottom: 1rem; 
    right: 1rem;
    padding-right: 1em; 
    display: none; 
    z-index: 999;

$top-bar-backround = #111
